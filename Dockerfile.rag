FROM python:3.10-slim

WORKDIR /app

# Install dependencies
COPY streamlit_backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY streamlit_backend/ .

# Expose API port
EXPOSE 8000

# Start FastAPI server
# Note: Using api:app assuming api.py is the entry point in streamlit_backend/
CMD ["uvicorn", "api:app", "--host", "0.0.0.0", "--port", "8000"]
