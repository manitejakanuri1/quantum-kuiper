rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============ HELPER FUNCTIONS ============
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isValidAgent(agentId) {
      return exists(/databases/$(database)/documents/agents/$(agentId));
    }
    
    function ownsAgent(agentId) {
      return isSignedIn() && 
        get(/databases/$(database)/documents/agents/$(agentId)).data.userId == request.auth.uid;
    }
    
    // ============ USERS COLLECTION ============
    
    match /users/{userId} {
      // Users can only read their own data
      allow read: if isOwner(userId);
      
      // Anyone authenticated can create a user (signup)
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Users can only update/delete their own data
      allow update, delete: if isOwner(userId);
    }
    
    // ============ AGENTS COLLECTION ============
    
    match /agents/{agentId} {
      // Public read access (needed for embed codes and public agents)
      allow read: if true;
      
      // Only authenticated users can create agents
      allow create: if isSignedIn() && 
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.keys().hasAll(['userId', 'name', 'status']);
      
      // Only the owner can update/delete
      allow update, delete: if isSignedIn() && 
        resource.data.userId == request.auth.uid;
    }
    
    // ============ KNOWLEDGE BASES COLLECTION ============
    
    match /knowledgeBases/{kbId} {
      // Read if signed in (for now; could be restricted to owner)
      allow read: if isSignedIn();
      
      // Create if signed in and owns the associated agent
      allow create: if isSignedIn() && 
        ownsAgent(request.resource.data.agentId);
      
      // Update/delete if signed in and owns the associated agent
      allow update, delete: if isSignedIn() && 
        ownsAgent(resource.data.agentId);
      
      // Chunks subcollection
      match /chunks/{chunkId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() && 
          ownsAgent(get(/databases/$(database)/documents/knowledgeBases/$(kbId)).data.agentId);
      }
    }
    
    // ============ SESSIONS COLLECTION ============
    
    match /sessions/{sessionId} {
      // Sessions are created by public embeds, so allow create without auth
      allow create: if true;
      
      // Read if you own the associated agent or created the session
      allow read: if isSignedIn() && (
        ownsAgent(resource.data.agentId) ||
        resource.data.createdBy == request.auth.uid
      );
      
      // Update if you own the agent
      allow update: if isSignedIn() && ownsAgent(resource.data.agentId);
      
      // Delete if you own the agent
      allow delete: if isSignedIn() && ownsAgent(resource.data.agentId);
      
      // Messages subcollection
      match /messages/{messageId} {
        allow create: if true; // Public embeds can add messages
        allow read: if isSignedIn() && (
          ownsAgent(get(/databases/$(database)/documents/sessions/$(sessionId)).data.agentId)
        );
        allow update, delete: if false; // Messages are immutable
      }
    }
    
    // ============ WEBSITE DATA COLLECTION ============
    
    match /websiteData/{dataId} {
      // Read if you own the associated agent
      allow read: if isSignedIn() && ownsAgent(resource.data.agentId);
      
      // Write if you own the associated agent
      allow write: if isSignedIn() && 
        ownsAgent(request.resource.data.agentId);
    }
    
    // ============ VOICES COLLECTION (READ-ONLY) ============
    
    match /voices/{voiceId} {
      // Public read access for voice selection
      allow read: if true;
      
      // No direct writes (managed via backend/admin)
      allow write: if false;
    }
    
    // ============ DEFAULT DENY ============
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
